@model IEnumerable<BookStoreApp.Models.Application>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Application Id</th>
                <th>Applicant Name</th>
                <th>Job Title</th>
                <th>Contact Number</th>
                <th>Mail ID</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Application application in Model)
            {
                <tr>
                    <td>@application.ApplicationID</td>
                    <td>@application.ApplicationName</td>
                    <td>@application.JobTitle</td>
                    <td>@application.ContactNumber</td>
                    <td>@application.MailID</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@application.ApplicationID" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Applications found.</p>
}
