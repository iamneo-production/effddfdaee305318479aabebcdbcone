@model IEnumerable<BookStoreApp.Models.Job>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Job Id</th>
                <th>Job Title</th>
                <th>Department</th>
                <th>Location</th>
                <th>Responsibility</th>
                <th>Qualification</th>
                <th>DeadLine</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Job job in Model)
            {
                <tr>
                    <td>@job.JobID</td>
                    <td>@job.JobTitle</td>
                    <td>@job.Department</td>
                    <td>@job.Location</td>
                     <td>@job.Responsibility</td>
                      <td>@job.Qualification</td>
                       <td>@job.DeadLine.Date.ToString("dd-MM-yyyy")</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@job.JobID" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Jobs found.</p>
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">